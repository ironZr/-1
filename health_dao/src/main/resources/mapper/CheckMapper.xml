<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.zr.mapper.CheckMapper">
    <insert id="addAll">
        insert into t_checkitem(code,name,sex,age,price,type,remark,attention) values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <update id="edit">
        update t_checkitem set code = #{code},name = #{name} where id = #{id}
    </update>

    <delete id="deleteByID">
        delete from t_checkitem where id=#{id}
    </delete>

    <select id="findPage" resultType="cn.zr.pojo.CheckItem">
        select * from t_checkitem
        <if test="queryString!=null and queryString.trim!=''">
        where code=#{queryString} or name=#{queryString}
        </if>
    </select>

    <select id="findById" resultType="cn.zr.pojo.CheckItem">
        select * from t_checkitem where id=#{id}
    </select>

</mapper>